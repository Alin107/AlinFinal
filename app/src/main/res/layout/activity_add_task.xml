<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="24dp">

    <!-- عنوان الصفحة -->
    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Workplace"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

    <!-- اسم مكان العمل -->
    <EditText
        android:id="@+id/editText_namePlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Place Name"
        android:textColorHint="#AAAAAA"
        android:textColor="#FFFFFF"
        android:background="@android:drawable/edit_text"
        android:layout_below="@id/textView_title"
        android:layout_marginTop="24dp" />

    <!-- موقع مكان العمل -->
    <EditText
        android:id="@+id/editText_locationPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:textColorHint="#AAAAAA"
        android:textColor="#FFFFFF"
        android:background="@android:drawable/edit_text"
        android:layout_below="@id/editText_namePlace"
        android:layout_marginTop="16dp" />

    <!-- وصف مكان العمل -->
    <EditText
        android:id="@+id/editText_descriptionPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:textColorHint="#AAAAAA"
        android:textColor="#FFFFFF"
        android:background="@android:drawable/edit_text"
        android:layout_below="@id/editText_locationPlace"
        android:layout_marginTop="16dp"
        android:lines="4"
        android:gravity="top"
        android:inputType="textMultiLine" />

    <!-- زر حفظ -->
    <Button
        android:id="@+id/button_savePlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3F51B5"
        android:layout_below="@id/editText_descriptionPlace"
        android:layout_marginTop="24dp" />

</RelativeLayout>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#121212">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post a Job"
        android:textSize="26sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Workplace Name -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workplace Name"
        android:textColor="#CCCCCC"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <AutoCompleteTextView
        android:id="@+id/etWorkplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#555555"
        android:textColor="#FFFFFF"
        android:hint="e.g., Restaurant, Workshop..."
        android:textColorHint="#AAAAAA" />

    <!-- Difficulty Level -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Difficulty Level"
        android:textColor="#CCCCCC"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="4dp" />

    <SeekBar
        android:id="@+id/skbrDifficulty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="5"
        android:progress="1"
        android:thumbTint="#03DAC5"
        android:progressTint="#03DAC5" />

    <!-- Job Description -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Job Description"
        android:boxStrokeColor="#888888">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etJobDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:hint="e.g., Morning shift delivery worker needed..." />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:weightSum="2"
        android:gravity="center">

        <Button
            android:id="@+id/btnPostJob"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Post Job"
            android:backgroundTint="#03DAC5"
            android:textColor="#000000"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Back"
            android:backgroundTint="#888888"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>

